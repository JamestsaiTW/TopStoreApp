<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TopStoreApp.AppShell"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:local="clr-namespace:TopStoreApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:TopStoreApp.Pages"
    mc:Ignorable="d">
    <TabBar>
        <ShellContent Title="聯絡人" Route="People">
            <ShellContent.Icon>
                <FontImageSource FontFamily="FA5" Glyph="&#xf2bd;" />
            </ShellContent.Icon>
            <pages:PeoplePage Title="聯絡人" />
        </ShellContent>
        <ShellContent Title="物品項" Route="Goods">
            <ShellContent.Icon>
                <FontImageSource FontFamily="FA5" Glyph="&#xf1ea;" />
            </ShellContent.Icon>
            <pages:GoodsPage Title="物品項" />
        </ShellContent>
        <ShellContent Title="訂單" Route="Orders">
            <ShellContent.Icon>
                <FontImageSource FontFamily="FA5" Glyph="&#xf022;" />
            </ShellContent.Icon>
            <pages:OrdersPage Title="訂單" />
        </ShellContent>
        <ShellContent Title="設定" Route="Settings">
            <ShellContent.Icon>
                <FontImageSource FontFamily="FA5" Glyph="&#xf185;" />
            </ShellContent.Icon>
            <pages:SettingsPage Title="設定" />
        </ShellContent>
    </TabBar>
</Shell>
